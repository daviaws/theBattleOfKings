Game.select(terrain):
	location_info = board.retrieve_location_info(terrain) #LocationInfo
	broadcast(location_info)
	if location_info.occupied:
		movements = board.possible_movement(location_info.troop) #List: Movement
		broadcast(movements)

Game.movement(movement, troop):#Movement, Troop
	troop.move(movement)


